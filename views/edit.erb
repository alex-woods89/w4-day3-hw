<form method="post" action="/students/<%= @student.id %>">
  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  value="<%= @student.first_name %>"
  />

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  value="<%= @student.last_name %>"
  />

  <label for="select-house">Select a House:</label>
  <select name="house_id" id="house-selection">
    <option hidden value="default">Select A House</option>
    <option
    value="Gryffindor"
    <%= "selected" if @student.house.name == "gryffindor" %>
    >Gryffindor</option>
    <option
    value="Hufflepuff"
    <%= "selected" if @student.house.name == "hufflepuff" %>
    >Hufflepuff</option>
    <option
    value="Ravenclaw"
    <%= "selected" if @student.house.name == "ravenclaw" %>
    >Ravenclaw</option>
    <option
    value="Slytherin"
    <%= "selected" if @student.house.name == "slytherin" %>
    >Slytherin</option>
  </select>


  <label for="age">Age:</label>
  <input
  type="number"
  name="age"
  id="age"
  value="<%= @student.age() %>"
  />

  <input type='submit' value="Edit Student">
</form>
